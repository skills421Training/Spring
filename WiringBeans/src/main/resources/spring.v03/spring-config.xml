<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Bean Factory -->
	<bean id="beanfactory" class="com.skills421.v03.model.BeanFactory">
	</bean>
	
	<!-- Person Template -->
	<bean id="person" class="com.skills421.v03.model.Person" scope="prototype">
		<property name="name" value="Jon Doe" />
		<property name="age" value="21" />
		<property name="email" value="john.doe@gmail.com" />
	</bean>

</beans>
